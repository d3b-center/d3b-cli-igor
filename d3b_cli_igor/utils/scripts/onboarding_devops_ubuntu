#!/bin/bash
set -e
echo "
#    _____              ____               ____        _                         _ _
#   |  __ \            / __ \             / __ \      | |                       | (_)
#   | |  | | _____   _| |  | |_ __  ___  | |  | |_ __ | |__   ___   __ _ _ __ __| |_ _ __   __ _
#   | |  | |/ _ \ \ / / |  | | '_ \/ __| | |  | | '_ \| '_ \ / _ \ / _ |    __/ _ | | _ \ / _   |
#   | |__| |  __/\ V /| |__| | |_) \__ \ | |__| | | | | |_) | (_) | (_| | | | (_| | | | | | (_| |
#   |_____/ \___| \_/  \____/| .__/|___/  \____/|_| |_|_.__/ \___/ \__,_|_|  \__,_|_|_| |_|\__, |
#                            | |                                                            __/ |
#                            |_|                                                           |___/
 for Mac"
echo "Install Ansible, Checkov, Sshuttle"
terraform_version="1.0.8"
packer_version="1.7.4"
pip3 install ansible checkov sshuttle
sshuttle --sudoers
echo "Install AWSCLI"
curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
unzip awscliv2.zip
rm -rf awscliv2.zip
sudo ./aws/install --update
echo "Install Terraform"
sudo apt-get update && sudo apt-get install -y gnupg software-properties-common curl
curl -fsSL https://apt.releases.hashicorp.com/gpg | sudo apt-key add -
sudo apt-add-repository "deb [arch=amd64] https://apt.releases.hashicorp.com $(lsb_release -cs) main"
sudo apt-get update && sudo apt-get install terraform
echo "Install packer"
curl -fsSL https://apt.releases.hashicorp.com/gpg | sudo apt-key add -
sudo apt-add-repository "deb [arch=amd64] https://apt.releases.hashicorp.com $(lsb_release -cs) main"
sudo apt-get update && sudo apt-get install packer
rm -rf packer
if [ -z ~/.aws ]; then
  mkdir ~/.aws
  touch ~/.aws/credentials
fi
